@model Worktastic.Models.JobPosting

@{
    ViewData["Title"] = "Erstellen oder Bearbeiten";
}

<form asp-controller="JobPosting" asp-action="CreateEditJob" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Inserat bearbeiten</h5>
        </div>
        <div class="card-body">
            <input hidden asp-for="Id" />
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="JobTitle" type="text"
                        placeholder="Bitte trage eine Jobbezeichnung ein." />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="JobLocation" type="text"
                        placeholder="Bitte trage einen Ort ein." />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="JobDescription"
                        placeholder="Bitte trage eine ausführliche Beschreibung ein."></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="Salary" type="number"
                        placeholder="Wieviel Jahresgehalt zahlt ihr?" />
                </div>

            </div>
            <div class="row mb-3">
                <div class="col-6">
                    <div class="col-form-label">
                        Wann startet der Job?
                    </div>
                    <input class="form-control" asp-for="StartDate" type="date" placeholder="Wann startet der Job?" />
                </div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="CompanyName" type="text"
                        placeholder="Wie heißt deine Firma?" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactWebsite" type="text"
                        placeholder="Die Webadresse deiner Firma?" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="ContactPhone" type="text" placeholder="Telefonnummer." />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactMail" type="email" placeholder="Email." />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label>Bild</label>
                    <input class="form-control" name="file" type="file"  />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>
    </div>
</form>